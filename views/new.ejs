<%- include ("./partials/header")%>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Create a New Donar</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/bloodbank" method="POST">

                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="name">
                </div>


                <div class="form-group">
                    <input class="form-control" type="tel" name="age" placeholder="Age">
                </div>



                <div class="form-group">
                    <input class="form-control" type="text" name="address" placeholder="address">
                </div>


                 <div class="form-group">
                    <input class="form-control" type="text" name="blood_group" placeholder="bloodgroup">
                </div>


                 <div class="form-group">
                    <input class="form-control" type="tel" name="contact_no" placeholder="contact_no">
                </div>


                 <div class="form-group">
                    <input class="form-control" type="text" name="any_disease" placeholder="Disease">
                </div>


                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/bloodbank">Go Back</a>
        </div>
    </div>
</div>
<%- include ("./partials/footer")%>